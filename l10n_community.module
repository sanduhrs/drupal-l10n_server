    '#value' => $langcode,
  );
  
  $form['file'] = array(
    '#type' => 'file',
    '#title' => t('Translation file'),
    '#size' => 50,
    '#description' => t('A gettext Portable Object (.po) file to upload.'),
  );
  $form['submit'] = array(
